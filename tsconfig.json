{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "module": "esnext",
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "rootDir": ".",
    "sourceMap": true,
    "target": "es5",
    "declaration": false,
    "jsx": "preserve",
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "isolatedModules": true
  },
  "compileOnSave": true,
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    ".idea",
    ".env",
    ".next",
    "server"
  ]
}